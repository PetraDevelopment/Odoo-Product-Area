<odoo>
    <record id="stock_stock_scrap_form_view_inherit" model="ir.ui.view">
        <field name="name">stock.stock_scrap_form_view inherit</field>
        <field name="model">stock.scrap</field>
        <field name="inherit_id" ref="stock.stock_scrap_form_view"/>
        <field name="arch" type="xml">
                <!-- Add fields -->
                <xpath expr="//label[@for='scrap_qty']" position="before">
                    <field name="numberofcarton" string="Primary UoM"/>
                    <field name="numberoftiles" string="Secondary Uom"/>
                </xpath>
                <xpath expr="//field[@name='product_uom_id']" position="replace">
                    <field name="product_uom_id" groups="uom.group_uom" force_save="1" readonly="True"/>
                </xpath>

                
        </field>
    </record>
</odoo>
