<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="extension_purchaseorderline" model="ir.ui.view">
        <field name="name">extension.purchaseorderline</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']/tree/field[@name='product_qty']" position="after">
            <button name="calculate_product_qty_purchase"  string="Calculate M" type="object" class="btn"  icon="fa-pencil-square-o" attrs="{'invisible': [('carton_text', '!=', 'كرتونة')]}" style="width: 97px; height: 21px;"/>
                <field name="blank_field" readonly='True'/>

                <field name="uom_per_unit" string="Primary UOM" />
                <field name="carton_text" readonly='True' string=' '/>

                <field name="total" string="Second UOM"/>
                <field name="tiles_text" readonly='True' string=' '/>
                <button name="calculate_product_uon_and_total_purchase"  string="Calculate Box" type="object" class="btn"  icon="fa-pencil-square-o" attrs="{'invisible': [('carton_text', '!=', 'كرتونة')]}" style="width: 107px; height: 21px;"/>
                <field name="blank_field" readonly='True'/>
                   
            </xpath>

        </field>
    </record>

    


   
</odoo>
