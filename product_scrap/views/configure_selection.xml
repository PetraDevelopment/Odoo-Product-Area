<?xml version="1.0"?>
<odoo>
    <template id="variants_inherit" inherit_id="sale.variants">
        <xpath expr="//t[@t-foreach='product.valid_product_template_attribute_line_ids']" position="inside">

            <t t-if="ptal.attribute_id.display_type == 'new_radio_selection'">
                <ul t-att-data-attribute_id="ptal.attribute_id.id" t-attf-class="list-unstyled js_add_cart_variants mb-0 #{ul_class}" t-att-data-attribute_exclusions="json.dumps(attribute_exclusions)">
                    <li t-foreach="ptal.product_template_value_ids._only_active()" t-as="ptav">
                        <label class="form-check-label">
                            <input type="radio"
                                t-attf-class="form-check-input js_variant_change #{ptal.attribute_id.create_variant}"
                                t-att-checked="ptav in combination"
                                t-att-name="'ptal-%s' % ptal.id"
                                t-att-value="ptav.id"
                                t-att-data-value_id="ptav.id"
                                t-att-data-value_name="ptav.name"
                                t-att-data-attribute_name="ptav.attribute_id.name"
                                t-att-data-is_custom="ptav.is_custom"
                                t-att-data-is_single="single"
                                t-att-data-is_single_and_custom="single_and_custom" />
                            <span t-field="ptav.name"/>
                            <t t-call="sale.badge_extra_price"/>
                        </label>
                    </li>
                </ul>
            </t>
        </xpath>
    </template>
</odoo>
