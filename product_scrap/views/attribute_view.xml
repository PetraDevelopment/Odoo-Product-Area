<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="radio_size_field_due" model="ir.ui.view">
        <field name="name">radio.size.field.due</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
           

            <xpath expr="//field[@name='create_variant']" position="after">
                <field name="hint_msg" attrs="{'invisible': [('display_type', '!=', 'new_radio_selection')]}" />
            </xpath>

        </field>
    </record>

</odoo>
    