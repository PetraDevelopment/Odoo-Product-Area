<?xml version="1.0" encoding="utf-8"?>
<odoo>
<record id="view_partner_simple_form_inherited" model="ir.ui.view">
    <field name="name">res.partner.simplified.form.inherited</field>
    <field name="model">res.partner</field>
    <field name="inherit_id" ref="base.view_partner_form"/>
    <field name="arch" type="xml">
        <xpath expr="//div[@class='oe_title mb24']/h1" position="replace">
             <field id="company" name="name" default_focus="1" placeholder="  Name" attrs="{'required' : [('type', '=', 'contact'),('is_company','=', True)], 'invisible': [('is_company','=', False)]}"/>
            <field id="individual" name="name" default_focus="1" placeholder="  Name" attrs="{'required' : [('type', '=', 'contact'),('is_company','=', False)], 'invisible': [('is_company','=', True)]}"/>
        </xpath>
    </field>
</record>
</odoo>
